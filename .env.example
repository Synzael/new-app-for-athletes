# ===========================================
# Athlete Recruiting & NIL Showcase Platform
# Environment Configuration
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=4000

# Frontend URL (for CORS and email links)
FRONTEND_HOST=http://localhost:3000

# Database Configuration
# PostgreSQL connection
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=athlete_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Session Configuration
# IMPORTANT: Generate a secure random string (32+ characters)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_super_secret_session_key_here_make_it_long_and_random

# Email Configuration (choose one)
# Option 1: SparkPost
SPARKPOST_API_KEY=your_sparkpost_api_key_here

# Option 2: Nodemailer/SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# API URL for Frontend (React app)
REACT_APP_API_URL=http://localhost:4000/api/v1

# ===========================================
# Production Settings (when deploying)
# ===========================================
# NODE_ENV=production
# PORT=4000
# FRONTEND_HOST=https://your-domain.com
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# REDIS_URL=redis://user:pass@host:6379
# SESSION_SECRET=very_long_random_production_secret
